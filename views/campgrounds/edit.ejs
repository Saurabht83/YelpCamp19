<% include ../partials/header.ejs  %>

<div class = "container">
      
            <h1 style = "text-align:center;">Edit <%= camp.name %>  </h1>
            <div style = "width:30%; margin:25px auto;"> 
                        <form action="/campgrounds/<%= camp._id %>?_method=PUT"  method = "POST"> 
                        <div class = form-group>
                        <label>Name:    </label>
                        <input class = "form-control "type = "text" name = "camp[name]" value = "<%= camp.name %>" >
                        </div>
                        <div class = form-group>
                        <label> ImageURL:   </label>
                        <input class = "form-control " type = "text" name = "camp[image]"  value = "<%= camp.image %>" >
                        </div>
                        <div class = form-group>
                        <label> Description:   </label>
                        <textarea class = "form-control"  name = "camp[description]">   
                                      <%= camp.description %> 
                        </textarea> 
                        </div>
                        
                        <div class = form-group>
                        <button class ="btn btn-lg btn-primary btn-block">  Edit  </button>
                        </div>
                        
                        </form>
                         <a href = "/campgrounds" class = "btn btn-lg btn-danger" > Go Back </a>
            </div>

 </div>
